{
  "name": "youth-finance-app",
  "version": "1.0.0",
  "description": "A comprehensive youth financial management platform for children and parents",
  "private": true,
  "workspaces": [
    "backend",
    "web-dashboard",
    "mobile-app",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:web\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:web": "npm run dev --workspace=web-dashboard",
    "build": "npm run build --workspaces --if-present",
    "build:backend": "npm run build --workspace=backend",
    "build:web": "npm run build --workspace=web-dashboard",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf node_modules backend/node_modules web-dashboard/node_modules mobile-app/node_modules shared/node_modules",
    "docker:dev": "docker-compose up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "prisma:generate": "npm run prisma:generate --workspace=backend",
    "prisma:migrate": "npm run prisma:migrate --workspace=backend"
  },
  "keywords": [
    "finance",
    "youth",
    "banking",
    "education",
    "fintech"
  ],
  "author": "Youth Finance App Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
